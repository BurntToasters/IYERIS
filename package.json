{
  "name": "iyeris",
  "version": "0.5.0",
  "description": "A beautiful cross-platform file explorer built with Electron, featuring a stunning liquid-glass interface with smooth animations and modern design.",
  "main": "dist/main.js",
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "boolean": "^3.2.0",
    "buffer-crc32": "^0.2.13",
    "cacheable-lookup": "^5.0.4",
    "cacheable-request": "^7.0.4",
    "clone-response": "^1.0.3",
    "debug": "^4.4.3",
    "decompress-response": "^6.0.0",
    "defer-to-connect": "^2.0.1",
    "define-data-property": "^1.1.4",
    "define-properties": "^1.2.1",
    "detect-node": "^2.1.0",
    "electron-updater": "^6.6.2",
    "end-of-stream": "^1.4.5",
    "env-paths": "^2.2.1",
    "es-define-property": "^1.0.1",
    "es-errors": "^1.3.0",
    "es6-error": "^4.1.1",
    "escape-string-regexp": "^4.0.0",
    "extract-zip": "^2.0.1",
    "fd-slicer": "^1.1.0",
    "fs-extra": "^8.1.0",
    "get-stream": "^5.2.0",
    "global-agent": "^3.0.0",
    "globalthis": "^1.0.4",
    "gopd": "^1.2.0",
    "got": "^11.8.6",
    "graceful-fs": "^4.2.11",
    "has-property-descriptors": "^1.0.2",
    "http-cache-semantics": "^4.2.0",
    "http2-wrapper": "^1.0.3",
    "json-buffer": "^3.0.1",
    "json-stringify-safe": "^5.0.1",
    "jsonfile": "^4.0.0",
    "keyv": "^4.5.4",
    "lowercase-keys": "^2.0.0",
    "matcher": "^3.0.0",
    "mimic-response": "^1.0.1",
    "ms": "^2.1.3",
    "node-7z": "^3.0.0",
    "normalize-url": "^6.1.0",
    "object-keys": "^1.1.1",
    "once": "^1.4.0",
    "p-cancelable": "^2.1.1",
    "pend": "^1.2.0",
    "progress": "^2.0.3",
    "pump": "^3.0.3",
    "quick-lru": "^5.1.1",
    "resolve-alpn": "^1.2.1",
    "responselike": "^2.0.1",
    "roarr": "^2.15.4",
    "semver": "^6.3.1",
    "semver-compare": "^1.0.0",
    "serialize-error": "^7.0.1",
    "sprintf-js": "^1.1.3",
    "sumchecker": "^3.0.1",
    "type-fest": "^0.13.1",
    "undici-types": "^6.21.0",
    "universalify": "^0.1.2",
    "wrappy": "^1.0.2",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "copy:css": "node -e \"require('fs').copyFileSync('src/twemoji.css', 'dist/twemoji.css')\"",
    "build": "tsc && tsc --project tsconfig.renderer.json && npm run copy:css",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --enable-logging",
    "build:win": "npm run build && electron-builder --win --x64 --arm64",
    "build:win:x64": "npm run build && electron-builder --win --x64 --publish never",
    "build:win:arm64": "npm run build && electron-builder --win --arm64 --publish never",
    "build:mac:universal": "npm run build && dotenv -e .env -- electron-builder --mac --universal",
    "build:mac:universal:dev": "npm run build && electron-builder --mac --universal",
    "build:linux": "npm run build && electron-builder --linux AppImage deb rpm --x64 --arm64",
    "build:linux:all": "npm run build:linux && npm run flatpak:clean && npm run flatpak:build && npm run flatpak:bundle",
    "build:linux:x64": "npm run build && electron-builder --linux AppImage deb rpm --x64",
    "build:linux:arm64": "npm run build && electron-builder --linux AppImage deb rpm --arm64",
    "build:linux:native": "npm run build && USE_SYSTEM_FPM=true electron-builder --linux AppImage deb rpm --x64 --arm64",
    "flatpak:build": "flatpak-builder --user --install --force-clean build-dir com.burnttoasters.iyeris.yml",
    "flatpak:run": "flatpak run com.burnttoasters.iyeris",
    "flatpak:bundle": "flatpak-builder --repo=repo --force-clean build-dir com.burnttoasters.iyeris.yml && flatpak build-bundle repo iyeris.flatpak com.burnttoasters.iyeris",
    "flatpak:clean": "rm -rf build-dir .flatpak-builder repo"
  },
  "build": {
    "appId": "com.burnttoasters.iyeris",
    "productName": "IYERIS",
    "afterSign": "build/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "BurntToasters",
      "repo": "IYERIS"
    },
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "main.css",
      "assets/**/*",
      "licenses.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/iyeris.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false,
      "artifactName": "${productName}-MacOS-universal.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon-square.ico",
      "artifactName": "${productName}-Win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Win-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "artifactName": "${productName}-Linux-${arch}.${ext}"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BurntToasters/IYERIS.git"
  },
  "keywords": [
    "electron",
    "file-explorer",
    "glassmorphism",
    "cross-platform"
  ],
  "author": "BurntToasters <code@rosie.run>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/BurntToasters/IYERIS/issues"
  },
  "homepage": "https://github.com/BurntToasters/IYERIS#readme"
}
